<% if @contact.errors.any? %>
  $('.ui.message.error').remove();
  $('.ui.modal .content').prepend("<%= j(render 'shared/errors', model: @contact) %>");
<% else %>
  $('.contact-field').replaceWith("<%= j(select_tag 'job[contact_id]', options_from_collection_for_select(current_enterprise.contacts, :id, :name), {class: 'ui dropdown contact-field'}) %>");
  $('.ui.dropdown').dropdown();
  $('.ui.modal').modal('hide');
<% end %>
