<% if @company.errors.any? %>
  $('.ui.message.error').remove();
  $('.ui.modal .content').prepend("<%= j(render 'shared/errors', model: @company) %>");
<% else %>
  $('.company-field').replaceWith("<%= j(select_tag 'job[company_id]', options_from_collection_for_select(current_enterprise.companies, :id, :name), {class: 'ui dropdown company-field'}) %>");
  $('.ui.dropdown').dropdown();
  $('.ui.modal').modal('hide');
<% end %>
